<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>urlchecker</servlet-name>
        <servlet-class>p.UrlChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>urlpinger</servlet-name>
        <servlet-class>p.UrlPinger</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>urlchecker</servlet-name>
        <url-pattern>/UrlChecker</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>urlpinger</servlet-name>
        <url-pattern>/UrlPinger</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>client.html</welcome-file>
    </welcome-file-list>
</web-app>
